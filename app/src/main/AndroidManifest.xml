<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.farmconnection">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FarmConnection">
        <activity
            android:name=".mainactivities.MakeAppointment"
            android:exported="false"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".detailactivities.ViewImage"
            android:exported="false"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".detailactivities.FarmerMessages"
            android:exported="false"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".detailactivities.Payment"
            android:exported="false"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".detailactivities.UploadNewPlant"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".detailactivities.ProductDetailModel"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".mainactivities.SelectNewPlants"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".mainactivities.Dashboard"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".mainactivities.CheckCurrentPlants"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".mainactivities.SplashPage"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>